@model OnlineJobPortal.Models.product

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}

<h1>Product Details </h1>

@section categories {

    @foreach (var data in ViewBag.categories)
    {
        <li><a class="dropdown-item" asp-action="Products" asp-route-id="@data.id"> @data.title </a></li>
    }

}

<div class="row">
    
    <div class="col-sm-6">
        <img src="~/product/@Model.image" class="w-100" />
    </div>
    <div class="col-sm-6">
        <h2> @Model.name </h2>
        <p>
            @Model.description
        </p>

        <h3> Price: ₹ @Model.price  <s>@Model.price</s>   </h3>
        <h5> Discount : 5% </h5>

        <a class="btn btn-success" asp-action="BuyNow" asp-route-id="@Model.id" >Buy Now</a>
        <a class="btn btn-warning" asp-action="AddToCart" asp-route-id="@Model.id">Add To Cart</a>

    </div>

</div>

